<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_main_redText"
        android:layout_width="76dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="482dp"
        android:onClick="colorizeRed"
        android:text="@string/red"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_main_greenText"
        app:layout_constraintStart_toEndOf="@+id/button_main_blueText"
        app:layout_constraintTop_toBottomOf="@+id/editText_main_textToColorize"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_main_blueText"
        android:layout_width="76dp"
        android:layout_height="48dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="482dp"
        android:onClick="colorizeBlue"
        android:text="@string/blue"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_main_redText"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_main_textToColorize"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_main_greenText"
        android:layout_width="76dp"
        android:layout_height="48dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="482dp"
        android:onClick="colorizeGreen"
        android:text="@string/green"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_main_redText"
        app:layout_constraintTop_toBottomOf="@+id/editText_main_textToColorize"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/editText_main_textToColorize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="98dp"
        android:layout_marginTop="159dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="142dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/button_main_clearText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47000003" />

    <Button
        android:id="@+id/button_main_clearText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="382dp"
        android:onClick="clearText"
        android:text="@string/clear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_main_greenText"
        app:layout_constraintTop_toBottomOf="@+id/editText_main_textToColorize" />

    <TextView
        android:id="@+id/textView_main_colorizedText"
        android:layout_width="185dp"
        android:layout_height="45dp"
        android:layout_marginBottom="276dp"
        android:gravity="center|center_vertical"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>