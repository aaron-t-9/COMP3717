<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_main_title"
        android:layout_width="215dp"
        android:layout_height="0dp"
        android:layout_marginTop="131dp"
        android:layout_marginBottom="127dp"
        android:text="@string/colors_and_songs_by_aaron_tansley"
        android:textAlignment="center"
        android:textColor="@color/grass_green"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button_main_songs1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_main_songs1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/powder_blue"
        android:onClick="songButtonDirectory"
        android:text="@string/song_1"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/button_main_songs2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_main_title" />

    <Button
        android:id="@+id/button_main_songs2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="302dp"
        android:backgroundTint="@color/molten_pearl"
        android:onClick="songButtonDirectory"
        android:text="@string/song_2"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/button_main_songs1"
        app:layout_constraintTop_toBottomOf="@+id/button_main_songs1"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>