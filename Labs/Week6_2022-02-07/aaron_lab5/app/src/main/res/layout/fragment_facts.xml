<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6F52BCDC"
    tools:context=".FactsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/linearLayout_factsFrag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_factsFrag_oceanFact"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/facts"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/button_factsFrag_nextFact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#6F52BCDC"
            android:text="@string/random_fact"
            android:textColor="#000000"
            app:strokeColor="#B5AAAA"
            app:strokeWidth="0.25dp" />
    </LinearLayout>

</FrameLayout>